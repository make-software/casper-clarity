FROM node:12.5.0-stretch-slim

ARG NODE_ENV=local
ENV NODE_ENV=$NODE_ENV

ARG DATABASE_URI
ENV DATABASE_URI=$DATABASE_URI

ARG HOST=0.0.0.0
ENV HOST=$HOST

WORKDIR /app

COPY src /app/src
COPY config /app/config
COPY db /app/db
COPY package.json /app/package.json

RUN npm install

ENTRYPOINT npm run start-web-server